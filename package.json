{
  "name": "Koa2",
  "version": "1.0.0",
  "scripts": {
    "dev": "pm2 start ./process_dev.json --env dev",
    "dev_stop": "pm2 stop ./process_dev.json && pm2 delete ./process_dev.json",
    "dev_restart": "npm run dev_stop && npm run dev",
    "start": "pm2 start ./process_pro.json",
    "stop": "pm2 stop ./process_pro.json && pm2 delete ./process_pro.json",
    "restart": "npm run stop && npm run start"
  },
  "dependencies": {
    "koa": "^2.0.0",
    "koa-body": "^4.0.4",
    "koa-compress": "^3.0.0",
    "koa-helmet": "^4.0.0",
    "koa-router": "^7.0.0",
    "koa-static": "^4.0.3",
    "koa-views": "^5.0.1",
    "nunjucks": "^3.1.3",
    "request": "^2.87.0",
    "superagent": "^3.8.3",
    "xml2js": "^0.4.19"
  },
  "devDependencies": {
    "browser-sync": "^2.18.13",
    "del": "^3.0.0",
    "fs": "^0.0.1-security",
    "gulp": "^4.0.0",
    "gulp-autoprefixer": "^4.0.0",
    "gulp-csso": "^3.0.0",
    "gulp-file-include": "^1.2.0",
    "gulp-htmlmin": "^4.0.0",
    "gulp-replace": "^0.6.1",
    "gulp-rev": "^8.1.0",
    "gulp-rev-collector": "^1.2.3",
    "gulp-sass": "^3.1.0",
    "gulp-sourcemaps": "^2.6.1",
    "gulp-tinypng-compress": "^1.2.1",
    "gulp-uglify": "^3.0.0",
    "gulp.spritesmith": "^6.7.0",
    "merge-stream": "^1.0.1",
    "minimist": "^1.2.0",
    "mockjs": "^1.0.1-beta3",
    "node-sass": "^4.9.0"
  }
}
